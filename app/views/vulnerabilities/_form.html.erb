<%= form_with(model: vulnerability, local: true) do |form| %>
  <%= render partial: 'partials/form_errors', locals: {model: @vulnerability} %>

  <div class="form-group">
    <%= form.label :date %><br />
    <%= form.text_field :date %>
  </div>

  <div class="form-group">
    <%= form.label :rubygem %><br />
    <%= form.text_field :rubygem %>
  </div>

  <div class="form-group">
    <%= form.label :title %><br />
    <%= form.text_area :title %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
